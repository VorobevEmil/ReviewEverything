@page "/Admin/Category"
@attribute [Authorize("Admin")]
@inject IStringLocalizer<Category> Localizer;
@inject IStringLocalizer<SharedResource> SharedLocalizer


<PageTitle>@Localizer["Categories"] - @SharedLocalizer["Control Panel"]</PageTitle>

<div class="container mt-5">
    @if (Categories != null)
    {
        <MudTable Items="Categories" Dense="true">
            <ToolBarContent>
                <MudText Typo="Typo.h6">@Localizer["Categories"]</MudText>
                <MudSpacer />
                <MudButton Variant="Variant.Filled" OnClick="() => CreateOrEditCategoryAsync()">@Localizer["Add"]</MudButton>
            </ToolBarContent>
            <HeaderContent>
                <MudTh>@Localizer["Title"]</MudTh>
                <MudTh></MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="@Localizer["Title"]">@context.Title</MudTd>
                <MudTd>
                    <div style="display: flex; justify-content: flex-end;">
                        <MudIconButton Size="Size.Small" Icon="@Icons.Filled.Edit" Color="Color.Info" OnClick="() => CreateOrEditCategoryAsync(context.Id, context.Title)" />
                        <MudIconButton Size="Size.Small" Icon="@Icons.Filled.Delete" Color="Color.Error" OnClick="() => DeleteCategoryAsync(context.Id)" />
                    </div>
                </MudTd>
            </RowTemplate>
            <PagerContent>
                <MudTablePager RowsPerPageString="" />
            </PagerContent>
        </MudTable>
    }
    else
    {
        <MudOverlay Visible="true" DarkBackground="true" >
            <MudProgressCircular Color="Color.Primary" Size="Size.Large" Indeterminate="true" />
        </MudOverlay>
    }
</div>

@{
#pragma warning disable CS8625
}
<MudMessageBox @ref="MessageBox">
    <MessageContent>
        <MudTextField DebounceInterval="500" Style="width: 320px;" @bind-Value="CategoryRequest.Title" Margin="Margin.Dense" Variant="Variant.Outlined" Placeholder="@Localizer["Category Title"]" />
    </MessageContent>
    <YesButton>
        <MudButton Class="mx-2" Variant="Variant.Filled" Color="Color.Primary">@Localizer["Save"]</MudButton>
    </YesButton>
    <NoButton>
        <MudButton Class="mx-2" Variant="Variant.Filled" Color="Color.Secondary">@Localizer["Cancel"]</MudButton>
    </NoButton>
</MudMessageBox>
@{
#pragma warning restore CS8625
}