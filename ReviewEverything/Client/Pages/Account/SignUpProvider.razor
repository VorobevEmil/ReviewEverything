@page "/account/sign-up-provider/{provider}"
@using Microsoft.AspNetCore.Components

<PageTitle>@Localizer["Регистрация"] - Reviews of everything</PageTitle>

<div class="center-block">
    <EditForm Model="@_model" OnValidSubmit="OnValidSubmitAsync">
        <DataAnnotationsValidator />

        <MudPaper Class="mx-3 px-5 py-3 text-center" Style="display: flex; flex-direction: column; align-items: center; width: 350px;">
            <MudText Class="mt-2" Style="font-size: 21px;">@Localizer["СОЗДАТЬ УЧЕТНУЮ ЗАПИСЬ"]</MudText>
            <div class="mt-3 w-100">
                <MudTextField FullWidth="true" @bind-Value="_model.FullName" For="@(() => _model.FullName)" Margin="Margin.Dense" Variant="Variant.Outlined" Placeholder="@Localizer["Полное Имя"]"></MudTextField>
                <span class="my-2"></span>
                <MudTextField FullWidth="true" @bind-Value="_model.UserName" For="@(() => _model.UserName)" Margin="Margin.Dense" Variant="Variant.Outlined" Placeholder="@Localizer["Имя Пользователя"]"></MudTextField>
            </div>

            <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Class="my-5" FullWidth="true" Color="Color.Primary">@Localizer["Создать аккаунт"]</MudButton>

            <MudOverlay Visible="_sendRequest" DarkBackground="true" Absolute="true">
                <MudProgressCircular Color="Color.Secondary" Indeterminate="true" />
            </MudOverlay>
        </MudPaper>
    </EditForm>
</div>