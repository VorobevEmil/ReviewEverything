@inject IStringLocalizer<App> Localizer
<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(Program).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <NotAuthorized>
                    <AuthorizeView Context="authContext">
                        <Authorized>
                            <MudText Style="text-align: center; font-size: xx-large;" Color="Color.Warning">@Localizer["NoRight"]</MudText>
                        </Authorized>
                        <NotAuthorized>
                            @{
                                NavigationManager.NavigateTo("/account/sign-in");
                            }
                        </NotAuthorized>
                    </AuthorizeView>
                </NotAuthorized>
            </AuthorizeRouteView>
        </Found>
        <NotFound>
            <AuthorizeView Context="authContext">
                <Authorized>
                    <LayoutView Layout="@typeof(MainLayout)">
                        <PageTitle>404 Not Found</PageTitle>
                        <div style="display:flex; flex-direction: column; align-items: center;">
                            <span style="font-size: 36px;">Not Found</span>
                            <span style="font-size: 30px;">@Localizer["NotFound"]</span>
                        </div>
                    </LayoutView>
                </Authorized>
                <NotAuthorized>
                    @{
                        NavigationManager.NavigateTo("/account/sign-in");
                    }
                </NotAuthorized>
            </AuthorizeView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>