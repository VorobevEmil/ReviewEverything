@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>

    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" OnClick="DrawerToggle" Style="color: #fff" Edge="Edge.Start" />
       
        <MudText Typo="Typo.h5" Class="ml-3">Воробьёв Эмиль</MudText>

        <MudSpacer />
    </MudAppBar>

    <MudDrawer @bind-Open="@_drawerOpen" Elevation="1">
        <NavMenu />
    </MudDrawer>


    <MudMainContent>
        <CascadingValue Value="this">
            @Body
        </CascadingValue>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}
